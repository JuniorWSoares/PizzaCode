<!-- Container principal dos ícones do cabeçalho -->
<div class="header-icons">

  <!-- Seção do usuário -->
  <div class="user">
    <!-- Ícone do perfil do usuário -->
    <img src="/images/user.png" alt="Perfil" id="user-icon">

    <!-- Menu do usuário -->
    <div class="user-menu" id="user-menu">

      <!-- Opções do menu do usuário -->
      <div id="menu-options">
        <!-- Verifica se o usuário está logado -->
        <% if (userData.role === "") { %>
          <!-- Botão de login para usuários não autenticados -->
          <a href="#" id="login-button"><i class="fas fa-sign-in-alt"></i> Login</a>
        <% } else { %>
          <!-- Botão de logout para usuários autenticados -->
          <form action="/auth/logout" method="post" style="display: inline;">
            <button type="submit"><i class="fas fa-sign-in-alt"></i> Sair</button>
          </form>
        <% } %>
        <!-- Link para a seção de endereços -->
        <a id="address-link" href="#enderecos"><i class="fas fa-map-marker-alt"></i> Endereço</a>
      </div>

      <!-- Formulário de Login -->
      <div id="login-form-container" class="hidden">
        <h3>Login</h3>
        <form id="login-form" action="/auth/login" method="post">
          <!-- Campo para o e-mail -->
          <input type="email" id="login-email" name="email" placeholder="Digite seu e-mail" required>
          <!-- Campo para a senha -->
          <input type="password" id="login-password" name="password" placeholder="Digite sua senha" required>
          <!-- Botão para enviar o formulário de login -->
          <button type="submit">Entrar</button>
        </form>
        <!-- Link para redirecionar ao formulário de cadastro -->
        <p>Não tem uma conta? <a href="#" id="show-register">Cadastrar-se</a></p>
        <!-- Mensagem de feedback do login -->
      </div>

      <!-- Formulário de Cadastro -->
      <div id="register-form-container" class="hidden">
        <h3>Cadastro</h3>
        <form id="register-form" action="/auth/register" method="post">
          <!-- Campo para o nome completo -->
          <input type="text" id="name" name="name" placeholder="Nome Completo" required>
          <!-- Campo para a data de nascimento -->
          <input type="date" id="birthdate" name="dayOfBirth" required>
          <!-- Campo para o e-mail -->
          <input type="email" id="register-email" name="email" placeholder="Crie seu e-mail" required>
          <!-- Campo para a senha -->
          <input type="password" id="register-password" name="password" placeholder="Crie uma senha" required>
          <!-- Campo para o telefone -->
          <input type="tel" id="phone" name="phone" placeholder="Telefone" required>
          <!-- Botão para enviar o formulário de cadastro -->
          <button type="submit">Cadastrar</button>
        </form>
        <!-- Link para redirecionar ao formulário de login -->
        <p>Já tem uma conta? <a href="#" id="show-login">Fazer login</a></p>
        <!-- Mensagem de feedback do cadastro -->
      </div>

      <% if(true) {%>
        <div id="address-saved-container" class="hidden">
          <h3>Endereço</h3>

          <ul class="address-list">
            <li class="address-item">Campo Leal SN</li>
            <li class="address-item">CEP: 28637000</li>
            <li class="address-item">Sumidouro - RJ</li>
            <li class="address-item">Junior Soares</li>
            <li class="address-item">22992266180</li>
            <li class="address-item">Complemento...</li>
          </ul>

          <div class="address-buttons">
            <button class="delete-address">Excluir</button>
            <button class="update-address">Atualizar</button>
          </div>
        </div>
      <% } else if(false) { %>

      <% } else { %>

      <% } %>

    </div>
  </div>

  <!-- Seção do carrinho de compras -->
  <div class="cart">
    <!-- Ícone do carrinho de compras -->
    <img src="/images/shopping-cart.png" alt="Carrinho de Compras">
  </div>

</div>