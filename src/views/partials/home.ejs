<!-- Seção principal da página inicial -->
<section id="home">
    <!-- Container do conteúdo principal (hero) -->
    <div class="hero">
      <!-- Verifica se o usuário está logado -->
      <% if (userData.role !== "") { %>
        <!-- Mensagem de boas-vindas personalizada para usuários autenticados -->
        <h1>Bem-vindo, <%= userData.name %> !</h1>
      <% } else { %>
        <!-- Mensagem de boas-vindas genérica para visitantes não autenticados -->
        <h1>Bem-vindo à PizzaCode</h1>
      <% } %>
      <!-- Descrição da página inicial -->
      <p>Saborosas pizzas feitas especialmente para você!</p>
      <!-- Botão de chamada para ação que redireciona para o cardápio -->
      <a href="#menu" class="cta-button">Ver Cardápio</a>
    </div>
</section>